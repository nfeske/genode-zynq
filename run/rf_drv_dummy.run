			<service name="Nic">    <child name="nic_bus"/> </service>
			<any-service> <parent/> <any-child/> </any-service>
		</route>
	</start>

	<start name="rf_drv_2">
		<binary name="rf_drv_dummy"/>
		<resource name="RAM" quantum="8M"/>
		<route>
