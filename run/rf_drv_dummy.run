##
# Use rf_drv_dummy to test routing between multiple nic_routers interconnected
# via radio. The radio channel is represented by the nic_bus component.
#
#  to qemu host
#       |
#  -----------                   ---------------------
#  | nic_drv |--- Uplink --------| nic_router_master |
#  -----------           "uplink"---------------------
#                         domain          |  "rf" domain
#                                        Nic
#                                         |
#                                    -----------
#                                    | nic_bus |
#                                    -----------
#                                         |
#                                        Nic
#                                         | "rf" domain
# ------------                   --------------------
# | lighttpd |------ Nic --------| nic_router_slave |
# ------------            "http" --------------------
#                         domain
#
# nic_router_master gets its IP for the uplink domain via the nic_drv from the
# host and acts as a DHCP server on the rf domain. nic_router_slave thus
# gets its IP for the rf domain from via nic_bus from nic_router_master.
# lighttpd gets its IP from the DHCP server implemented by nic_router_slave for
# the http domain.
# Port forwarding and NATing is performed by the nic_routers between the
# domains/subnets so that the http server is accessible via http://localhost:5555
# on the host system.
#


if {![have_include power_on/qemu]} {
	puts "Runs script requires qemu"
	exit 0
}

create_boot_directory

import_from_depot [depot_user]/src/[base_src] \
                  [depot_user]/pkg/[drivers_nic_pkg] \
                  [depot_user]/src/lighttpd \
                  [depot_user]/src/libc \
                  [depot_user]/src/openssl \
                  [depot_user]/src/posix \
                  [depot_user]/src/vfs \
                  [depot_user]/src/vfs_lwip \
                  [depot_user]/src/zlib

set build_components {
	init
	app/ping
	server/nic_router
	drivers/nic/rf
	server/nic_bus
}

build $build_components

append config {

<config>

	<parent-provides>
		<service name="ROM"/>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
	</parent-provides>

	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>
	<default caps="200"/>

	<start name="nic_drv" caps="1000" managing_system="yes">
		<resource name="RAM" quantum="32M"/>
		<binary name="init"/>
		<route>
			<service name="ROM" label="config"> <parent label="drivers.config"/> </service>
			<service name="Timer"> <child name="timer"/> </service>
			<service name="Uplink"> <child name="nic_router_master"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="timer">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Timer"/></provides>
	</start>

	<start name="nic_router_master">
		<binary name="nic_router"/>
		<resource name="RAM" quantum="10M"/>
		<provides>
			<service name="Nic"/>
			<service name="Uplink"/>
		</provides>
		<config verbose_domain_state="yes">
			<policy label="rf_drv_1 -> " domain="rf"/>
			<default-policy              domain="uplink"/>

			<domain name="uplink">

				<nat domain="rf"
				     tcp-ports="16384"
				     udp-ports="16384"
				     icmp-ids="16384"/>

				<tcp-forward port="80" domain="rf" to="10.0.3.2"/>
			</domain>


			<domain name="rf" interface="10.0.3.1/24">

				<dhcp-server ip_first="10.0.3.2"
				             ip_last="10.0.3.200"/>

			</domain>
		</config>
	</start>

	<start name="nic_router_slave">
		<binary name="nic_router"/>
		<resource name="RAM" quantum="10M"/>
		<provides>
			<service name="Nic"/>
			<service name="Uplink"/>
		</provides>
		<config verbose_domain_state="yes">

			<policy label_prefix="rf_drv_2 -> " domain="rf"/>
			<policy label_prefix="lighttpd -> " domain="http"/>

			<domain name="rf">
				<tcp-forward port="80" domain="http" to="10.0.4.2"/>
			</domain>
			<domain name="http" interface="10.0.4.1/24">
				<dhcp-server ip_first="10.0.4.2"
				             ip_last="10.0.4.2"/>
			</domain>

		</config>
	</start>

	<start name="lighttpd" caps="200">
		<resource name="RAM" quantum="512M" />
		<config>
			<arg value="lighttpd" />
			<arg value="-f" />
			<arg value="/etc/lighttpd/lighttpd.conf" />
			<arg value="-D" />
			<vfs>
				<dir name="dev">
					<log/> <null/> <inline name="rtc">2000-01-01 00:00</inline>
					<inline name="random">0123456789012345678901234567890123456789</inline>
				</dir>
				<dir name="socket"> <lwip dhcp="yes"/> </dir>
				<dir name="etc">
					<dir name="lighttpd">
						<inline name="lighttpd.conf">
# lighttpd configuration
server.port            = 80
server.document-root   = "/website"
server.event-handler   = "select"
server.network-backend = "write"
server.upload-dirs     = ( "/tmp" )
server.modules         = ("mod_openssl")
index-file.names     = (
  "index.xhtml", "index.html", "index.htm"
)
mimetype.assign      = (
  ".html"         =>      "text/html",
  ".htm"          =>      "text/html"
)
$SERVER["socket"] == ":443" {
	ssl.engine  = "enable"
	ssl.pemfile = "/etc/lighttpd/example.pem"
}
